Ciro Mondueri <ciro@mondueri.com>
January 2005

-->

  <!-- root element: calendars -->
  <xsd:element name="calendars">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="calendar" maxOccurs="unbounded">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element name="year">
                <xsd:complexType>
                  <xsd:attribute name="value" type="xsd:string"/>
                </xsd:complexType>
              </xsd:element>
            </xsd:sequence>
            <xsd:attribute name="name" type="xsd:string"/>
          </xsd:complexType>
        </xsd:element>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>



  <!-- Root element: calendar -->
  <xsd:element name="calendar">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="year" type="yearType"/>
      </xsd:sequence>

      <xsd:attribute name="id" type="xsd:string"/>
    </xsd:complexType>
  </xsd:element>


  <!-- YEAR TYPE -->
  <xsd:complexType name="yearType">
    <xsd:sequence>
      <xsd:element name="month" type="monthType" minOccurs="0" maxOccurs="12"/>
    </xsd:sequence>

    <xsd:attribute name="value" type="xsd:integer" use="required"/>
  </xsd:complexType>


  <!-- MONTH TYPE -->
  <xsd:complexType name="monthType">
    <xsd:sequence>
      <xsd:element name="day" type="dayType" minOccurs="0" maxOccurs="31" />
    </xsd:sequence>

    <xsd:attribute name="value" use="required">
      <xsd:simpleType>
        <xsd:restriction base="xsd:integer">
          <xsd:minInclusive value="1"/>
          <xsd:maxInclusive value="12"/>
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
  </xsd:complexType>


  <!-- DAY TYPE -->
  <xsd:complexType name="dayType">
    <xsd:sequence>
      <xsd:element minOccurs="0" name="skipDay" />
    </xsd:sequence>

    <xsd:attribute name="value" use="required">
      <xsd:simpleType>
        <xsd:restriction base="xsd:integer">
          <xsd:minInclusive value="1"/>
          <xsd:maxInclusive value="31"/>
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>

    <xsd:attribute name="dow">
      <xsd:simpleType>
        <xsd:restriction base="xsd:integer">
          <xsd:minInclusive value="1"/>
          <xsd:maxInclusive value="7"/>
        </xsd:restriction>
      </xsd:simpleType>
    </xsd:attribute>
  </xsd:complexType>

</xsd:schema>
